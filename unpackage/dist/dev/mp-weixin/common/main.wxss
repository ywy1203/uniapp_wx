/* 高 240  tabbar 26  topnav 20  home-bg 202  top12
 */

.absolute-center{
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
}

.fixed-center{
	position: fixed;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
}

.absolute-width-center{
	position: absolute;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%)
}

.fixed-width-center{
	position: fixed;	
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}

#{
	box-sizing: border-box;
	padding: 0;
	margin: 0;
}

.float-left{
	float: left;
}

.float-right{
	float: right;
}

.margin-width-center{
	margin: 0 auto;
}

.flex-center{
	display: flex;
	justify-content: center;
	align-items: center;
}

image{
	width: 100%;
	height: 100%;
}

